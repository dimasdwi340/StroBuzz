<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tek1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tek2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Strobuzz merupakan aplikasi penghitung omzet hasil bisnis stroberi dengan menginputkan besar modal yang anda masukkan. Cara kerja dari aplikasi ini sederhana yaitu dari modal yang anda masukkan akan dibagi dengan harga bibit dari jenis yang anda pilih untuk menghasilkan perkiraan jumlah bibit yang dapat dibeli. Setelah mengetahui jumlah bibit yang dapat dibeli, hasil pembagian tersebut akan dikalikan dengan jumlah rata-rata hasil panen yang menghasilkan perkiraan hasil dalam satu kali panen. Untuk menghitung perkiraan omzet yaitu dengan cara mengalikan rata-rata hasil panen dengan kisarah harga yang ada pada pasar. \n"
            android:textColor="#009900"
            android:textSize="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tek3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Berikut merupakan email yang dapat anda hubungi terkait aplikasi Strobuzz : \n"
            android:textColor="#0033FF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tek4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="dimasdwi340@gmail.com \n"
            android:textColor="#990000"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btok"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OK" />
    </LinearLayout>
</RelativeLayout>